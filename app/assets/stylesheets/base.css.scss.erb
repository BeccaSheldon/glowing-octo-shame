@import 'foundation_and_overrides';
@import 'foundation/components/grid';

body {
  background-image: url(<%= asset_path('wavegrid.png') %>);
}

.main {
  @include grid-row;
}

.title {
  @include grid-column(6);
}

.actions {
  @include grid-column(6);
  padding-top: 10px;
}

table {
  width: 100%;
  font-size: 2em;

  td.centered {
    text-align: center;
  }
}

a.button:visited {
  color: white;
}